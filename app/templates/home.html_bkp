{% extends "common_template.html" %}

{% block content %}
    <style>
        body {
            background: linear-gradient(107.74deg, #f2f2f2, #d9d9d9, #b3b3b3 147.42%);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            text-align: center;
            margin: 0;
